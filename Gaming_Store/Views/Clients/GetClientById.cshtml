@model Client

@{
    ViewData["Title"] = "GetClientById";
    var user = HttpContextAccessor.HttpContext.Session.GetString("UserRole");
}

<head>
     <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Client Details</title>

        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRROE10m5r5u+lLk/NFFqeNm6PUtw7AJJWsHoCI5H" crossorigin="anonymous"></script>
        <link href="~/css/Clients/DetailsClient.css" rel="stylesheet" />
</head>


<body>
    <div class="container mt-5">
        <h1  style="color:white;">@Model.Name's Details</h1>

        <div class="card" style="margin-top:5vh">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row mb-4">
                            <div class="col-sm-3 font-weight-bold text-nowrap">
                                <span>Name</span>
                            </div>
                            <div class="col-sm-9">
                                <p>@Model.Name</p>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col-sm-3 font-weight-bold text-nowrap">
                                <span>Description</span>
                            </div>
                            <div class="col-sm-9">
                                <p>@Model.Description</p>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col-sm-3 font-weight-bold text-nowrap">
                                <span>Email</span>
                            </div>
                            <div class="col-sm-9">
                                <p>@Model.Email</p>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col-sm-3 font-weight-bold text-nowrap">
                                <span>Password</span>
                            </div>
                            <div class="col-sm-9">
                                <p>@Model.Password</p>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col-sm-3 font-weight-bold text-nowrap">
                                <span>Phone</span>
                            </div>
                            <div class="col-sm-9">
                                <p>@Model.Phone</p>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col-sm-3 font-weight-bold text-nowrap">
                                <span>Birth Date</span>
                            </div>
                            <div class="col-sm-9">
                                <p>@Model.Birthdate.ToShortDateString()</p>
                            </div>
                        </div>
                        <div class="row mb-4">
                            <div class="col-sm-3 font-weight-bold text-nowrap">
                                <span>Country</span>
                            </div>
                            <div class="col-sm-9">
                                <p>@Model.Country</p>
                            </div>
                        </div>
                    </div>

                    <!-- Image Section -->
                    <div class="col-md-6">
                        @if (Model.Image != null)
                        {
                            <div class="image-container" style="height: 300px; background-size: cover; background-repeat: no-repeat; background-position: center; background-image: url('data:image/*;base64,@Convert.ToBase64String(Model.Image)');"></div>
                        }
                        else
                        {
                            <div class="img-container" ></div>
                        }
                    </div>
                </div>
            </div>

            <div class="card-footer text-right" style="display:inline-flex;justify-content: end;" >
                <a class="btn btn-primary" asp-action="EditClient" asp-route-id="@Model?.Id">Edit</a>
                @if(user == "Admin")
                {
                <a class="btn btn-danger"  asp-action="DeleteClient" asp-route-id="@Model?.Id">Delete</a>
                }
                <a class="btn btn-secondary right-button" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</body>

<script>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel = "stylesheet" >
</script>
