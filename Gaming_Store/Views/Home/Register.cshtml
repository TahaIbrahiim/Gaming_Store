@model Client

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register Form</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRROE10m5r5u+lLk/NFFqeNm6PUtw7AJJWsHoCI5H" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/Register.css">
    <!-- Font Awesome for the back arrow icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <!-- Back Arrow -->
    <a asp-action="Index" class="back-arrow">
        <i class="fas fa-arrow-left"></i>
    </a>

    <div class="wrapper">
        <form method="post" asp-action="Register" enctype="multipart/form-data">
            <h2 style="font-weight:bold;color:red;font-style:italic;">Register</h2>
            <div class="input-field">
                <input type="text" asp-for="Name" required>
                <label asp-for="Name">Enter your Username</label>
            </div>
            <div class="input-field">
                <input type="email" asp-for="Email" required>
                <label asp-for="Email">Enter your email</label>
            </div> 
            <div class="input-field">
                <input type="password" asp-for="Password" required>
                <label asp-for="Password">Enter your Password</label>
            </div>
            <div class="input-field">
                <input type="tel" asp-for="Phone" required>
                <label asp-for="Phone">Enter your Phone Number</label>
            </div>
            <div class="input-field">
                <select style="margin-left:250px" type="text" asp-for="Country" required> 
                    <option selected>Egypt</option>
                    <option>Syria</option>
                    <option>Palestine</option>
                    <option>England</option>
                    <option>Spain</option>
                    <option>German</option>
                </select>
                <label style="padding-right:30px" asp-for="Country">Choose your Country</label>
            </div>
            <div class="input-field">
                <input type="date" asp-for="Birthdate" required>
                <label asp-for="Birthdate">Choose your Birthdate</label>
            </div>
            <div class="input-field">
                <input type="text" asp-for="Description" required>
                <label asp-for="Description">Enter your Description</label>
            </div>
            <div class="input-field">
                <input style="padding-top:10px" type="file" asp-for="Image" placeholder="Choose Image">
                <label style="font-size:medium">Choose Image</label>
            </div>
            <button class="btn btn-outline-dark" type="submit">Register</button>
            <div class="register">
                <p>Already have an account? <a style="text-decoration:underline;color:red;font-style:italic;" asp-action="Login">Login</a></p>
            </div>
        </form>
    </div>

    <!-- Image Preview -->
    <div class="media-preview">
        <div id="Image-Container" class="d-none">
            <img src="" alt="Image" class="img-thumbnail" />
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            // Image preview
            $('#Image').on('change', function () {
                var file = this.files[0];
                if (file) {
                    var imageUrl = URL.createObjectURL(file);
                    var imageContainer = $('#Image-Container');
                    imageContainer.removeClass('d-none');
                    imageContainer.find('img').attr('src', imageUrl);
                }
            });
        });
    </script>
</body>
</html>
